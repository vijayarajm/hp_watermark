<div>
  <h1>Listing users</h1>
  <%= link_to 'New User', new_user_path, :class => "pull-right btn btn-primary" %>
</div>

<% if @users.empty? %>
  <div><p><br><br><br>There are no users created to this app!</p></div>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th width="20%">Username</th>
        <th width="20%">Email</th>
        <th width="10%">Admin</th>
        <th>Actions</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? "Yes" : "No" %></td>
          <td><%= link_to 'Show', user %></td>
          <% unless user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>      
      <% end %>
    </tbody>
  </table>
<% end %>
