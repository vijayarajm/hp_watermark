<div class="pull-left">
  <%= link_to 'Images', image_path(@image) %> / Regions 
  <h1>Listing regions</h1>
</div>  
<%= link_to 'New Region', new_image_region_path, :class => "pull-right btn btn-primary" %>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="20%">Name</th>
      <th width="20%">Payoff</th>
      <th width="20%">Top Left X</th>
      <th width="20%">Top Left Y</th>
      <th width="20%">Width</th>
      <th width="20%">Height</th>
      <th width="20%">Watermark strength</th>
      <th width="20%">Watermark resolution</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= link_to region.payoff.name, region.payoff.url %></td>
        <td><%= region.top_left_x %></td>
        <td><%= region.top_left_y %></td>
        <td><%= region.width %></td>
        <td><%= region.height %></td>
        <td><%= region.watermark_strength %></td>
        <td><%= region.watermark_resolution %></td>
        
        <td><%= link_to 'Show', region %></td>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>      
    <% end %>
  </tbody>
</table>

<br>
