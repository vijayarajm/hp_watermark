<div>
  <h1>Listing projects</h1>
  <%= link_to 'New Project', new_project_path, :class => "pull-right btn btn-primary" %>
</div>

<% if @projects.empty? %>
  <div><p><br><br><br>There are no projects added to this project!</p></div>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th width="10%"></th>
        <th width="20%">Name</th>
        <th width="40%">Description</th>
        <th>Actions</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><img src="<%= project.logo_file_name.blank? ? %(/missing.png) : project.logo.url %>" width="30" height="30" /></td>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>      
      <% end %>
    </tbody>
  </table>
<% end %>
